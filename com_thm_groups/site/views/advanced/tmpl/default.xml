<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_THM_GROUPS_ADVANCED">
        <message>COM_THM_GROUPS_ADVANCED_DESC</message>
    </layout>
    <fields name="params">
        <fieldset name="basic" addfieldpath="/media/com_thm_groups/fields">
            <field name="groupID" type="usergroup" label="COM_THM_GROUPS_GROUP"
                   description="COM_THM_GROUPS_SELECT_GROUP_DESC"/>
            <field name="subgroups" type="radio" class="btn-group btn-group-yesno" default="1"
                   label="COM_THM_GROUPS_SUBGROUPS" description="COM_THM_GROUPS_SUBGROUPS_DESC">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field name="templateID" type="template" none="0" label="COM_THM_GROUPS_TEMPLATE"
                   description="COM_THM_GROUPS_TEMPLATE_SELECT_DESC"/>
            <field name="sort" type="radio" label="COM_THM_GROUPS_SORT" description="COM_THM_GROUPS_ADVANCED_SORT_DESC"
                   default="1">
                <option value="0">COM_THM_GROUPS_ROLE</option>
                <option value="1">COM_THM_GROUPS_ALPHABETICAL</option>
            </field>
            <field name="showRoles" type="radio" class="btn-group btn-group-yesno" default="0"
                   label="COM_THM_GROUPS_SHOW_ROLES" description="COM_THM_GROUPS_SHOW_ROLES_DESC">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field type="integer" name="columns" label="COM_THM_GROUPS_COLUMNS"
                   description="COM_THM_GROUPS_COLUMNS_DESC" first="1" last="2" step="1" default="2"/>
            <field name="suppress" type="radio" class="btn-group btn-group-yesno" default="1"
                   label="COM_THM_GROUPS_SUPPRESS_TEXT" description="COM_THM_GROUPS_SUPPRESS_TEXT_DESC">
                <option value="1">JON</option>
                <option value="0">JOFF</option>
            </field>
        </fieldset>
    </fields>
</metadata>

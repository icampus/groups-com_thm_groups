<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_THM_GROUPS_PROFILE_LIST">
        <message>COM_THM_GROUPS_PROFILE_LIST_DESC</message>
    </layout>
    <fields name="params">
        <fieldset name="basic">
            <field name="show_title"
                   type="list"
                   label="JGLOBAL_SHOW_TITLE_LABEL"
                   description="JGLOBAL_SHOW_TITLE_DESC">
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field name="groupID"
                   type="usergroup"
                   label="COM_THM_GROUPS_GROUP"
                   description="COM_THM_GROUPS_SELECT_GROUP_DESC"
                   multiple="false"/>
            <field name="byLetter"
                   type="radio"
                   label="COM_THM_GROUPS_RESTRICT_TO_LETTER"
                   class="btn-group btn-group-yesno"
                   default="0"
                   description="COM_THM_GROUPS_RESTRICT_TO_LETTER_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="linkTarget"
                   type="radio"
                   label="COM_THM_GROUPS_PROFILE_LINK"
                   description="COM_THM_GROUPS_PROFILE_LINK_DESC"
                   default="profile">
                <option value="module">COM_THM_GROUPS_MODULE_DISPLAY</option>
                <option value="profile">COM_THM_GROUPS_VIEW_DISPLAY</option>
            </field>
            <field name="columnCount"
                   type="integer"
                   label="COM_THM_GROUPS_COLUMNS"
                   description="COM_THM_GROUPS_COLUMNS_DESC"
                   first="1"
                   last="3"
                   step="1"
                    default="3">
            </field>
            <field name="showTitles"
                   type="radio"
                   class="btn-group btn-group-yesno"
                   default="1"
                   label="COM_THM_GROUPS_SHOW_TITLES"
                   description="COM_THM_GROUPS_SHOW_TITLES_DESC">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
        </fieldset>
    </fields>
</metadata>
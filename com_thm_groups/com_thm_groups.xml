<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" version=".0" method="upgrade">
    <name>COM_THM_GROUPS</name>
    <creationDate>March 2016</creationDate>
    <author>THM iCampus</author>
    <authorUrl>http://www.thm.de</authorUrl>
    <copyright>TH Mittelhessen 2016</copyright>
    <license>GNU/GPL Version 2</license>
    <version>3.6.4</version>
    <scriptfile>script.php</scriptfile>
    <install>
        <sql>
             <file driver="mysql" charset="utf8">sql/install.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
             <file driver="mysql" charset="utf8">sql/uninstall.sql</file>
        </sql>
    </uninstall>
    <update>
        <schemas>
             <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>

    <media folder="media" destination="com_thm_groups">
        <folder>controllers</folder>
        <folder>css</folder>
        <folder>helpers</folder>
        <folder>images</folder>
        <folder>img</folder>
        <filename>index.html</filename>
        <folder>js</folder>
        <folder>models</folder>
        <folder>templates</folder>
        <folder>views</folder>
    </media>

    <files folder="site">
        <folder>controllers</folder>
        <folder>css</folder>
        <folder>helper</folder>
        <folder>img</folder>
        <folder>models</folder>
        <folder>views</folder>

        <filename>controller.php</filename>
        <filename>index.html</filename>
        <filename>router.php</filename>
        <filename>thm_groups.php</filename>
    </files>

    <languages>
        <language tag="en-GB" client="site">language/en-GB/en-GB.com_thm_groups.ini</language>
        <language tag="de-DE" client="site">language/de-DE/de-DE.com_thm_groups.ini</language>
    </languages>

    <administration>
        <menu>COM_THM_GROUPS</menu>
        <submenu>
            <menu alias="Dynamic Types" link="option=com_thm_groups&amp;view=dynamic_type_manager" view="dynamic_type_manager" alt="Dynamic Types">COM_THM_GROUPS_DYNAMIC_TYPE_MANAGER</menu>
            <menu alias="Groups" link="option=com_thm_groups&amp;view=group_manager" view="group_manager" alt="Groups">COM_THM_GROUPS_GROUP_MANAGER</menu>
            <menu alias="Plugins" link="option=com_thm_groups&amp;view=plugin_manager" view="plugin_manager" alt="Plugins">COM_THM_GROUPS_PLUGIN_MANAGER</menu>
            <menu alias="Profiles" link="option=com_thm_groups&amp;view=profile_manager" view="profile_manager" alt="Profiles">COM_THM_GROUPS_PROFILE_MANAGER</menu>
            <menu alias="Attributes" link="option=com_thm_groups&amp;view=attribute_manager" view="attribute_manager" alt="Attributes">COM_THM_GROUPS_ATTRIBUTE_MANAGER</menu>
            <menu alias="Profile Templates" link="option=com_thm_groups&amp;view=template_manager" view="template_manager" alt="Profile Templates">COM_THM_GROUPS_TEMPLATE_MANAGER</menu>
            <menu alias="Roles" link="option=com_thm_groups&amp;view=role_manager" view="role_manager" alt="Roles">COM_THM_GROUPS_ROLE_MANAGER</menu>
            <menu alias="Static Types" link="option=com_thm_groups&amp;view=static_type_manager" view="static_type_manager" alt="Static Types">COM_THM_GROUPS_STATIC_TYPE_MANAGER</menu>
        </submenu>

        <files folder="admin">
            <filename>index.html</filename>
            <filename>thm_groups.php</filename>
            <filename>controller.php</filename>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>CHANGELOG.php</filename>
            <filename>install.php</filename>
            <filename>update.php</filename>
            <folder>assets</folder>
            <folder>controllers</folder>
            <folder>elements</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>

        <languages>
            <language tag="en-GB">language/en-GB/en-GB.com_thm_groups.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.com_thm_groups.sys.ini</language>
            <language tag="de-DE">language/de-DE/de-DE.com_thm_groups.ini</language>
            <language tag="de-DE">language/de-DE/de-DE.com_thm_groups.sys.ini</language>
        </languages>
    </administration>

    <dependencies>
        <dependency before="true" type="library" minversion="1.0.0">lib_thm_groups</dependency>
        <dependency before="true" type="library" minversion="0.0.25">lib_thm_core</dependency>
    </dependencies>

    <updateservers>
        <server type="collection" priority="1" name="THM Groups Component Update">https://www.thm.de/thmupdate/index.php?option=com_ars&amp;view=update&amp;task=all&amp;format=xml</server>
    </updateservers>
</extension>

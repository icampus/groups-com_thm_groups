<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/media/com_thm_groups/fields">
        <field name="checkbox" type="checkall"/>
        <field name="showLabel" type="list" onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="showIcon" type="list" onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="published" type="list" onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="viewLevelID" type="genericlist" valueColumn="a.viewLevelID" textColumn="vl.title"
               table="thm_groups_attributes AS a,viewlevels AS vl ON vl.id = a.viewLevelID" onchange="this.form.submit();">
            <option value="">JALL</option>
        </field>
        <field name="type" type="genericlist" valueColumn="id" textColumn="type" table="thm_groups_attribute_types"
               onchange="this.form.submit();">
            <option value="">JALL</option>
        </field>
    </fields>
</form>

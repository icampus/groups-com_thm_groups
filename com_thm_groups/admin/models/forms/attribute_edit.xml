<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" addfieldpath="/media/com_thm_groups/fields">
        <field name="id" type="hidden"/>
        <field name="name" type="text" class="inputbox input-large-text" size="40" label="COM_THM_GROUPS_NAME"
               required="true"/>
        <field name="dynamic_typeID" type="genericlist" valueColumn="id" textColumn="name"
               table="thm_groups_dynamic_type" label="COM_THM_GROUPS_DYNAMIC_TYPE"
               description="COM_THM_GROUPS_DYNAMIC_TYPE_DESC" required="true"/>
        <field name="validate" type="radio" class="btn-group btn-group-yesno" default="0"
               label="COM_THM_GROUPS_VALIDATE" description="COM_THM_GROUPS_ATTRIBUTE_EDIT_VALIDATE_DESC"
               required="true">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="description" type="textarea" label="COM_THM_GROUPS_DESCRIPTION" rows="10" cols="5"
               required="false"/>
        <field name="extra_options_lbl" type="spacer" label="COM_THM_GROUPS_ADDITIONAL"/>
        <field name="extra_options_spacer" type="spacer" hr="true"/>
        <field name="iconpicker" type="iconpicker" label="COM_THM_GROUPS_ATTRIBUTE_EDIT_ICON"/>
    </fieldset>
</form>
<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/media/com_thm_groups/fields">
        <field
                name="search"
                type="text"
                label="COM_THM_GROUPS_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
        />
        <field addfieldpath="/administrator/com_thm_groups/models/fields"
               name="moderators"
               type="moderator"
               label="COM_THM_GROUPS_GROUPS_FILTER"
               onchange="this.form.submit();"
        >
        </field>
        <field addfieldpath="/administrator/com_thm_groups/models/fields"
               name="roles"
               type="role"
               label="COM_THM_GROUPS_GROUPS_FILTER"
               onchange="this.form.submit();"
        >
        </field>
        <field addfieldpath="/administrator/com_thm_groups/models/fields"
               name="profile"
               type="profile"
               label="COM_THM_GROUPS_GROUPS_FILTER"
               onchange="this.form.submit();"
        >
        </field>
    </fields>
    <fields name="list">
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="25"
                label="COM_CONTENT_LIST_LIMIT"
                description="COM_CONTENT_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>

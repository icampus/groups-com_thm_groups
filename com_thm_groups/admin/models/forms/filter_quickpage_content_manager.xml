<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/libraries/thm_core/fields">
        <field
                name="search"
                type="text"
                label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
        />
        <field
                name="checkbox"
                type="checkall"/>
        <field
                name="status"
                type="status"
                label="COM_CONTENT_FILTER_PUBLISHED"
                description="COM_CONTENT_FILTER_PUBLISHED_DESC"
                onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>
        <field
                name="featured"
                type="list"
                label="COM_THM_GROUPS_PROFILE_MENU"
                onchange="this.form.submit();"
        >
            <option value="-1">COM_THM_GROUPS_ALL</option>
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field
                name="published"
                type="list"
                label="COM_THM_GROUPS_PUBLISH"
                onchange="this.form.submit();"
        >
            <option value="-1">COM_THM_GROUPS_ALL</option>
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field
                name="author"
                type="quickpageauthors"
                label="COM_THM_GROUPS_AUTHOR"
                onchange="this.form.submit();"
        >
            <option value="">COM_THM_GROUPS_ALL</option>
        </field>
    </fields>

    <fields name="list">
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="25"
                label="COM_CONTENT_LIST_LIMIT"
                description="COM_CONTENT_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>
